---
layout: main
isHome: true
---



<% post = @getCollection("annonce").toJSON()[0]%>
<% if new Date().toISOString().localeCompare(post.annonceDateStr) < 0 :%>
<div class="hero isAnchorsExist">
    <div class="video-wrapper">
        <video autoplay="" loop="" poster="<%=@site.url%>/images/poster.jpg">
            <source src="<%=@site.url%>/videos/video-very-compressed.mp4" type="video/mp4">
        </video>
    </div>
    <div class="hero-content">
        <div class="hero-content-wrapper centered">
            <p class="above-title"><%=post.annonceDateShort%>, Харьков</p>
            <h1><strong><%=post.title%></strong><!--<strong>Thinkjava</strong> <span>Meetup <strong>#4</strong></span>--></h1>
    <script>
        /*
        format "day month year hh:mm"
        It needs to display timer inside header
        */
        var eventDate = "<%=post.annonceDateTime%>";
    </script>            
            <div class="time-wrapper">
                <div class="time-window time-days"><p><span></span>д</p></div>
                <div class="time-window time-hours"><p><span></span>ч</p></div>
                <div class="time-window time-minutes"><p><span></span>м</p></div>
                <div class="time-window time-seconds"><p><span></span>с</p></div>
            </div>
            <a class="btn red" href="<%=@site.url%><%=post.url%>">Узнать больше</a>
        </div>
    </div>
</div>

<% else: %>
<div class="hero">
    <div class="video-wrapper">
        <video autoplay="" loop="" poster="<%=@site.url%>/images/poster.jpg">
            <source src="<%=@site.url%>/videos/video-very-compressed.mp4" type="video/mp4">
        </video>
    </div>
    <div class="hero-content">
        <div class="hero-content-wrapper centered">
            <h1>Kharkiv open<br /> <strong>Java</strong>-Community</h1>
            <a class="btn red" href="https://www.youtube.com/user/thinkjavakharkiv">Больше видео</a>
        </div>
    </div>
</div>

<% end %>



